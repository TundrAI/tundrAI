# Application
NODE_ENV=development
PORT=3000
FRONTEND_PORT=3001

# Documentation Processing
DOCS_FOLDER_PATH=./data/docs
EMBEDDINGS_FOLDER_PATH=./data/embeddings
UPLOADS_FOLDER_PATH=./data/uploads

# Vector Database
VECTOR_DB_TYPE=chroma
VECTOR_DB_HOST=localhost
VECTOR_DB_PORT=8000

# LLM Inference
INFERENCE_SERVER_URL=http://localhost:11434
LLM_MODEL=llama3.2:3b

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# RAG Settings
RAG_MODE=strict
MAX_CONTEXT_CHUNKS=5
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# Authentication (optional)
ENABLE_AUTH=false
JWT_SECRET=your-secret-key-here

# Language Support
SUPPORTED_LANGUAGES=en,fr
DEFAULT_LANGUAGE=en
